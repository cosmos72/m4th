#ifndef M4TH_ARM64_SZ_MH
#define M4TH_ARM64_SZ_MH

#define SZ 4    /* sizeof(m4cell), sizeof(void*) and width of registers in bytes */
#define SZ2 8   /* SZ * 2 */
#define SZ3 12  /* SZ * 3 */
#define SZ4 16  /* SZ * 4 */
#define SZ5 20  /* SZ * 5 */
#define SZ6 24  /* SZ * 6 */
#define SZ7 28  /* SZ * 7 */
#define SZ8 32  /* SZ * 8 */
#define SZ9 36  /* SZ * 9 */
#define SZ10 40 /* SZ * 10 */
#define SZ11 44 /* SZ * 11 */
#define SZ12 48 /* SZ * 12 */
#define SZ13 52 /* SZ * 13 */
#define PSZ 2   /* (1 << PSZ) == SZ */

#define SZt 2  /* sizeof(m4token) in bytes */
#define SZt2 4 /* SZt * 2 */
#define PSZt 1 /* (1 << PSZt) == SZt */

#endif /* M4TH_ARM64_SZ_MH */
